<Window x:Class="CMCS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ClaimsApp - Login" Height="453" Width="474" WindowStartupLocation="CenterScreen">
    <Grid Margin="15" Background="#F5F7FA">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER CARD -->
        <Border Background="LightBlue" 
            CornerRadius="12"
            Padding="18"
            BorderBrush="#DDDDDD"
            BorderThickness="1">

            <TextBlock Text="Login"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#2C3E50"
                   HorizontalAlignment="Center"/>
        </Border>

        <!-- FORM CARD -->
        <Border Grid.Row="1"
            Margin="0,14,0,0"
            Background="White"
            CornerRadius="12"
            Padding="20"
            BorderBrush="#DDDDDD"
            BorderThickness="1">

            <StackPanel>

                <!-- USERNAME -->
                <TextBlock Text="Username"
                       FontWeight="SemiBold"
                       Foreground="#34495E"/>

                <TextBox x:Name="txtUsername"
                     Width="300"
                     Height="34"
                     Margin="0,4,0,0"
                     Padding="8"/>

                <!-- PASSWORD -->
                <TextBlock Text="Password"
                       Margin="0,12,0,0"
                       FontWeight="SemiBold"
                       Foreground="#34495E"/>

                <PasswordBox x:Name="txtPassword"
                         Width="300"
                         Height="34"
                         Margin="0,4,0,0"
                         Padding="8"/>

                <!-- ROLE -->
                <TextBlock Text="Role"
                       Margin="0,12,0,0"
                       FontWeight="SemiBold"
                       Foreground="#34495E"/>

                <ComboBox x:Name="cbRole"
                      Width="180"
                      Height="32"
                      Margin="0,4,0,0">
                    <ComboBoxItem Content="Lecturer"/>
                    <ComboBoxItem Content="Coordinator"/>
                </ComboBox>

            </StackPanel>
        </Border>

        <!-- BUTTON BAR -->
        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0,18,0,0">

            <Button x:Name="btnLogin"
                Width="120"
                Height="38"
                Content="Login"
                Background="#3498DB"
                Foreground="White"
                BorderThickness="0"
                Click="BtnLogin_Click"/>

            <Button Width="120"
                Height="38"
                Content="Exit"
                Margin="16,0,0,0"
                Background="#E74C3C"
                Foreground="White"
                BorderThickness="0"
                Click="BtnExit_Click"/>

        </StackPanel>

        <!-- STATUS MESSAGE -->
        <TextBlock x:Name="lblStatus"
               Grid.Row="3"
               Margin="0,16,0,0"
               HorizontalAlignment="Center"
               FontWeight="SemiBold"
               Foreground="#C0392B"/>

    </Grid>

</Window>

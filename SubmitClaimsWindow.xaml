<Window x:Class="CMCS.SubmitClaimsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Claim" Height="464" Width="500" WindowStartupLocation="CenterScreen">
    <Grid Margin="15" Background="#F5F7FA">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="LightBlue"
            CornerRadius="10"
            Padding="15"
            BorderBrush="#DDDDDD"
            BorderThickness="1">

            <TextBlock Text="Submit a Claim"
                   FontSize="22"
                   FontWeight="SemiBold"
                   Foreground="#2C3E50" Margin="135,0,-135,0"/>
        </Border>

        <!-- FORM CARD -->
        <Border Grid.Row="1"
            Margin="0,12,0,0"
            Background="White"
            CornerRadius="10"
            Padding="20"
            BorderBrush="#DDDDDD"
            BorderThickness="1">

            <StackPanel>

                <!-- HOURS -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Hours Worked"
                           Width="140"
                           VerticalAlignment="Center"
                           Foreground="#34495E"
                           FontWeight="SemiBold"/>

                    <TextBox x:Name="txtHours"
                         Width="180"
                         Height="32"
                         Padding="6"/>
                </StackPanel>

                <!-- RATE -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Hourly Rate (R)"
                           Width="140"
                           VerticalAlignment="Center"
                           Foreground="#34495E"
                           FontWeight="SemiBold"/>

                    <TextBox x:Name="txtRate"
                         Width="180"
                         Height="32"
                         Padding="6"/>
                </StackPanel>

                <!-- NOTES -->
                <TextBlock Text="Notes"
                       Margin="0,12,0,4"
                       FontWeight="SemiBold"
                       Foreground="#34495E"/>

                <TextBox x:Name="txtNotes"
                     Height="90"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Padding="8"/>

                <!-- UPLOAD -->
                <StackPanel Orientation="Horizontal" Margin="0,12,0,0">

                    <Button x:Name="btnUpload"
                        Content="Upload Document"
                        Padding="10,5"
                        Background="#BDC3C7"
                        BorderThickness="0"
                        Click="BtnUpload_Click"/>

                    <TextBlock x:Name="txtFileName"
                           Margin="10,5,0,0"
                           VerticalAlignment="Center"
                           Foreground="#2C3E50"
                           FontStyle="Italic"/>
                </StackPanel>

                <!-- ACTION BUTTONS -->
                <StackPanel Orientation="Horizontal" Margin="0,18,0,0">

                    <Button x:Name="btnSubmit"
                        Width="140"
                        Height="36"
                        Content="Submit Claim"
                        Background="#2ECC71"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnSubmit_Click"/>

                    <Button Width="120"
                        Height="36"
                        Content="Logout"
                        Margin="14,0,0,0"
                        Background="#E74C3C"
                        Foreground="White"
                        BorderThickness="0"
                        Click="BtnLogout_Click"/>

                </StackPanel>

                <!-- STATUS MESSAGE -->
                <TextBlock x:Name="lblStatus"
                       Margin="0,14,0,0"
                       FontWeight="SemiBold"
                       Foreground="#C0392B"/>

            </StackPanel>

        </Border>

    </Grid>

</Window>
